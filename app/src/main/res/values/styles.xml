<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/greyish_brown</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="customEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:height">@dimen/height_60dp</item>
        <item name="android:width">0dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:background">@drawable/edit_text_border</item>
    </style>


    <style name="spinnerStyle" parent="@android:style/Widget.Spinner">
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:background">@drawable/edit_text_border</item>
    </style>

    <style name="buttonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_greyish_brown_radius_4dp</item>
    </style>

    <style name="customTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/greyish_brown</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_16dp</item>
        <item name="android:background">@color/app_white</item>
    </style>

    <style name="generalTextLabelsStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/greyish_brown</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="minimalTextLabelStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/greyish_brown</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="splashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:background">@drawable/splash_bg</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="noActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/greyish_brown</item>
        <item name="buttonStyle">@style/buttonStyle</item>
        <item name="editTextStyle">@style/customEditTextStyle</item>
        <item name="android:buttonStyle">@style/buttonStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="City_Change_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:background">@drawable/bg_transpereent_radius_4dp</item>
    </style>

</resources>
